(export square)

(define-function square
  (block body
    (= x (argument 0))
    (= _₁ (literal (@primitive-function imul 2)))
    (= _₂ (apply _₁ x))
    (= _↩ (apply _₂ x))
    (return _↩)))

(define-variable square©constant)

(define-setup square©setup
  (block body
    (= address (literal (@address square)))
    (= arity (literal 1))
    (= size (literal 0))
    (= curry
       (call
        (@primitive-function make-curry 3)
        address
        arity
        size))
    (store square©constant curry)
    (return)))
