(export square)

(define-function square
  (block body
    (= x (argument 0))
    (= _₁ (literal (@primitive-function imul 2)))
    (= _₂ (apply _₁ x))
    (= _↩ (apply _₂ x))
    (return _↩)))

(define-metadata square©metadata
  :name "square"
  :arity 1
  :is-primitive 0
  :variable-info square©variable-info)

(define-metadata square©variable-info)

(define-variable square©constant)

(define-setup square©setup
  (block body
    (= address (literal (@address square)))
    (= metadata (literal (@address square©metadata)))
    (= function
       (call
        (@primitive-function make-function 2)
        address
        metadata))
    (store square©constant function)
    (return)))
