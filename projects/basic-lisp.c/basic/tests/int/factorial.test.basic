(define-function (factorial n)
  (block entry
    (test (equal? n 1))
    (branch base-case recur-case))
  (block base-case
    (return 1))
  (block recur-case
    (= n1 (isub n 1))
    (= f1 (factorial n1))
    (= r (imul n f1))
    (return r)))
